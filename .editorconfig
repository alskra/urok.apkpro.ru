root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 120
tab_width = 4
trim_trailing_whitespace = true

[*.blade.php]

[*.css]
indent_size = 2

[*.feature]
indent_size = 2

[*.haml]
indent_size = 2

[*.less]
indent_size = 2

[*.sass]
indent_size = 2

[*.scss]
indent_size = 2

[*.twig]

[{*.pug,*.vue}]
indent_size = 2
tab_width = 2

[.editorconfig]

[{*.ant,*.fxml,*.jhm,*.jnlp,*.jrxml,*.rng,*.tld,*.wsdl,*.xml,*.xsd,*.xsl,*.xslt,*.xul,phpunit.xml.dist}]

[{*.ats,*.cts,*.mts,*.ts}]

[{*.bash,*.sh,*.zsh}]
indent_size = 2
tab_width = 2

[{*.cjs,*.js,*.mjs}]
indent_size = 2

[{*.cjsx,*.coffee}]
indent_size = 2
tab_width = 2

[{*.ctp,*.hphp,*.inc,*.module,*.php,*.php4,*.php5,*.phtml}]

[{*.har,*.jsb2,*.jsb3,*.json,.babelrc,.eslintrc,.stylelintrc,bowerrc,composer.lock,jest.config}]
indent_size = 2

[{*.htm,*.html,*.ng,*.sht,*.shtm,*.shtml}]
indent_size = 2

[{*.markdown,*.md}]

[{*.yaml,*.yml}]
indent_size = 2
